%h1= @movie.title

%p.rating= '10/' + @movie.rating.to_s

.row
  .col-md-3
    %img.img-rounded{ src: @movie.cover, width: '100%' }
  .col-md-9
    .jumbotron
      %p.description= @movie.description
    .row
      .col-md-12
        %q.plot= @movie.plot 
    - if user_signed_in?
      .row
        .col-md-12
          %br
          %p= link_to 'Email me details about this movie', send_info_movie_path(@movie), class: 'btn btn-sm btn-default' 
      .row
        .col-md-12
          = render 'movies/shared/comments', comments: @movie.comments
          %br
          = render "movies/shared/comments_form"
